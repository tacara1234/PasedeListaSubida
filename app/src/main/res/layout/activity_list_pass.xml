<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pasedelista.app.pasedelista.Activity.ListPassActivity">

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="60"
            android:layout_gravity="center_vertical"
            android:text="Numero de sesiÃ³n:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner_session_num"
            android:textColor="#000000"
            android:layout_weight="40"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/bttn_pass_list"
        android:layout_below="@id/layout_input"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:background="@drawable/button_custom"
        android:text="Pasar Lista"
        android:textSize="18dp"
        android:textColor="#FFFFFF" />


    <ListView
        android:id="@+id/list_pass"
        android:layout_below="@id/bttn_pass_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
